<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User ID"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_updated_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_user_id"
        android:hint="Updated Name" />

    <EditText
        android:id="@+id/et_updated_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_updated_name"
        android:hint="Updated Username" />

    <EditText
        android:id="@+id/et_updated_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_updated_username"
        android:hint="Updated Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_updated_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_updated_email"
        android:hint="Updated Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnUpdateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_updated_password"
        android:text="Update User" />

    <TextView
        android:id="@+id/update_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnUpdateUser"
        android:textColor="#FF0000"
        android:layout_marginTop="8dp"
        android:visibility="gone" />
</RelativeLayout>
